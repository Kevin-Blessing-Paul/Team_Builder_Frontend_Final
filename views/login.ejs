<%- include('partials/header') %>

<div class="login-page">

  <!-- Features / Articles Section (moved to top) -->
  <div class="features-container">
    <a href="/feature1" class="feature-card feature-1">
      <h3>Site Features</h3>
      <p>Discover the tools and utilities our site provides to help you form and manage teams easily.</p>
    </a>

    <a href="/feature2" class="feature-card feature-2">
      <h3>Coming Soon</h3>
      <p>Check out upcoming features and enhancements we are planning for future updates.</p>
    </a>

    <a href="/feature3" class="feature-card feature-3">
      <h3>Use Cases</h3>
      <p>Learn how the site can be used for project collaboration, team formation, and skill management.</p>
    </a>
  </div>

  <div class="login-container">
    <h1>Team Builder</h1>
    <p class="login-subtitle">Choose your role</p>

    <form action="/login" method="post">
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="you@college.edu" required>
      </div>

      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
      </div>

      <div class="form-group">
        <label for="role">Role:</label>
        <select id="role" name="role">
          <option value="member">Team Member</option>
          <option value="leader">Team Leader</option>
        </select>
      </div>

      <button type="submit" class="btn">Continue</button>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
